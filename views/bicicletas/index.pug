extends ../layout

block content
    a(href='/bicicletas/create') Create a Bike

    table.table
        t.head
            tr
                th(scope="col") #
                th(scope="col") Color
                th(scope="col") Modelo
                th(scope="col") Ubicacion
                th(scope="col")
                th(scope="col")
        t.body
            each bici in bicis
                tr
                    td(scope="row")
                      = bici.id
                    td= bici.color
                    td= bici.modelo
                    td= bici.ubicacion
                    td
                        a(href="bicicletas/" + bici.id + "/update") Editar  
                    td
                        form.inline(method="post" action="bicicletas/" + bici.id + "/delete")  
                            input(type="hidden" name="id" value=bici.id)
                            button.link-button(type='submit' name="submit_param" value="submit_value" class="btn")
                                = 'Eliminar'